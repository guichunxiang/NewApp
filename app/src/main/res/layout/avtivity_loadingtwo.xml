<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/viewPager_guide"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"

        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_margin="3dp"
            android:id="@+id/icon1_guide"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@mipmap/a4"/>
        <ImageView
            android:layout_margin="3dp"
            android:id="@+id/icon2_guide"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@mipmap/a4"/>
        <ImageView
            android:layout_margin="3dp"
            android:id="@+id/icon3_guide"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@mipmap/a4"/>
        <ImageView
            android:layout_margin="3dp"
            android:id="@+id/icon4_guide"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@mipmap/a4"/>
    </LinearLayout>
    <TextView
        android:id="@+id/number_guide"
        android:visibility="invisible"
        android:padding="5dp"
        android:layout_marginTop="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3秒后进入"
        android:textColor="#000"
        android:textSize="20sp"
        android:background="@drawable/guide_text"
        />
</RelativeLayout>